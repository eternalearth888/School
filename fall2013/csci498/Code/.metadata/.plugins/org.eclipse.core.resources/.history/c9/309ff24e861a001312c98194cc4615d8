		TextView final_p1_score = (TextView)findViewById(R.id.player_1_score);
		TextView final_p2_score = (TextView)findViewById(R.id.player_2_score);
		TextView final_p3_score = (TextView)findViewById(R.id.player_3_score);
		
	}

	
	
